/* pages/my/my.wxss */
page {
  background-color: #fff;
  height: 100%;
  width: 100%;
}

.person_info {
  align-items: center;
  padding: 30rpx;
}

.person_info,.person_info .left {
  display: flex;
}

.person_info .left {
  flex: 1;
}

.person_info image {
  border-radius: 50%;
  height: 144rpx;
  margin-right: 36rpx;
  width: 144rpx;
}

.person_info .person {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
}

.person .name {
  color: #000;
  font-size: 34rpx;
  font-weight: 500;
}

.person .college {
  color: #717771;
  font-size: 28rpx;
  margin-top: 16rpx;
}

.person_info .right {
  color: #717771;
  font-size: 28rpx;
}

.list_box .list,.person_info .right {
  align-items: center;
  display: flex;
}

.list_box .list {
  justify-content: space-between;
  margin: 30rpx;
}

.list_box .list .left,.list_box .list .left button {
  align-items: center;
  display: flex;
}

.list_box .list .left button {
  background: #fff!important;
  color: #000!important;
  flex: 1;
  font-size: 32rpx!important;
  font-weight: 400;
  justify-content: space-between;
  padding-left: 0;
}

.left .list_img {
  height: 36rpx;
  margin-right: 16rpx;
  width: 36rpx;
}

.left .list_img image {
  height: 100%;
  width: 100%;
}

