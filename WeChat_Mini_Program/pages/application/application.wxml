        <text>提交申请</text>
    </view> -->
    <button class="botton_item_grey"  type="primary" wx:if="{{!disclaimer}}" formType="submit">提交申请</button>
    <!-- <view class="botton_item_grey" wx:if="{{!disclaimer}}">
        <text>提交申请</text>
    </view> -->
</view>

</form>
</view>

